// 郵件發送活動
model EmailCampaign {
  id               String              @id @default(cuid())
  name             String              // 活動名稱
  subject          String              // 郵件主旨
  htmlContent      String              @db.Text // HTML 郵件內容
  textContent      String?             @db.Text // 純文字內容（備用）
  status           EmailCampaignStatus @default(DRAFT)
  targetAudience   Json                @default("{}") // 目標受眾篩選條件
  scheduledAt      DateTime?           // 預定發送時間
  sentAt           DateTime?           // 實際發送時間
  totalRecipients  Int                 @default(0) // 收件人總數
  successCount     Int                 @default(0) // 成功發送數
  failedCount      Int                 @default(0) // 失敗數
  openedCount      Int                 @default(0) // 打開數（預留）
  clickedCount     Int                 @default(0) // 點擊數（預留）
  createdBy        String              // 建立者（管理員 ID）
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  emailLogs        EmailLog[]

  @@index([status])
  @@index([createdAt])
  @@map("email_campaigns")
}

// 郵件發送記錄
model EmailLog {
  id               String           @id @default(cuid())
  campaignId       String           // 關聯的活動
  userId           String           // 收件人
  email            String           // 收件人郵件地址
  status           EmailLogStatus   @default(PENDING)
  sentAt           DateTime?        // 發送時間
  openedAt         DateTime?        // 打開時間（預留）
  clickedAt        DateTime?        // 點擊時間（預留）
  bouncedAt        DateTime?        // 退回時間
  errorMessage     String?          // 錯誤訊息
  createdAt        DateTime         @default(now())
  campaign         EmailCampaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([campaignId])
  @@index([userId])
  @@index([status])
  @@index([email])
  @@map("email_logs")
}

